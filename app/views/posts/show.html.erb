<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Posted date:</strong>
  <%= @post.posted_date %>
</p>

<% if @post.photo.present? && @post.photo.main_image.attached? %>
  <div>
    <strong>Main Image</strong>
    <%= image_tag @post.photo.main_image.variant(resize: '400x400') %>
  </div>
<% end %>

<div>
  <strong>Content</strong>
  <%= @post.content %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

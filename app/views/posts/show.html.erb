<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Posted date:</strong>
  <%= @post.posted_date %>
</p>

<% if @post.photo.present? %>
  <% if @post.photo.main_image.attached? %>
    <%= image_tag @post.photo.main_image %>
  <% end %>

  <% if @post.photo.other_images.attached? %>
    <% @post.photo.other_images.each do |other| %>
      <%= image_tag other %>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

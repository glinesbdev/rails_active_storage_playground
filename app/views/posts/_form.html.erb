<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :posted_date %>
    <%= form.datetime_select :posted_date %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.file_field :main_image %>
  </div>

  <% if post.main_image.attached? %>
    <div class="field">
      <%= form.label :remove_main_image, "Remove Main Image" %>
      <%= form.check_box :remove_main_image %>
    </div>

    <div>Current main image: </div>
    <%= image_tag post.main_image.variant(resize: '200x200') %>
    <%= tag.input type: 'hidden', name: 'post[main_image]', value: post.main_image.blob.signed_id %>
  <% end %>

  <% if post.other_images.attached? %>  
    <% post.other_images.each do |other| %>
      <%= tag.input type: 'hidden', name: 'post[other_images][]', value: other.blob.signed_id %>
    <% end %>
  <% end %>
  
  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

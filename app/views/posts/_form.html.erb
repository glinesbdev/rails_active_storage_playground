<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :posted_date %>
    <%= form.datetime_select :posted_date %>
  </div>
  
  <%= form.fields_for :photo, post do |photo| %>
    <div class="field">
      <%= photo.label :main_image %>
      <%= photo.file_field :main_image %>
    </div>

    <div class="field">
      <%= photo.label :other_images %>
      <%= photo.file_field :other_images, multiple: true %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
